<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="true"
        android:background="#000000">

        <ImageView
            android:id="@+id/background_cover"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:background="@drawable/default_background"
            android:alpha="0.4" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <android.support.v4.view.ViewPager
                android:id="@+id/image_pager"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="bottom">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/ripple_effect"
                    android:gravity="center_vertical"
                    android:id="@+id/song_settings">

                    <me.arkadiy.geronplayer.views.SquareImageView
                        android:id="@+id/repeat_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_repeat_white_24dp"
                        android:scaleType="center" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical|center_horizontal"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:layout_weight="1">

                        <TextView
                            android:id="@+id/song_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                            android:textSize="21sp"
                            tools:text="dasdasd" />

                        <TextView
                            android:id="@+id/artist_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:ellipsize="marquee"
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:freezesText="true"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:scrollHorizontally="true"
                            android:singleLine="true"
                            android:textSize="17sp"
                            tools:text="asdasdasd" />
                    </LinearLayout>

                    <me.arkadiy.geronplayer.views.SquareImageView
                        android:id="@+id/shuffle_view"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="10dp"
                        android:src="@drawable/ic_shuffle_white_24dp"
                        android:scaleType="center" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/position_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="6"
                        android:paddingLeft="20dp"
                        android:paddingStart="20dp"
                        tools:text="asdasdasd"
                        android:shadowColor="#000000"
                        android:textSize="12sp"
                        android:paddingRight="5dp"
                        android:paddingEnd="5dp" />

                    <SeekBar
                        android:id="@+id/progress_seek_bar"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_weight="1"
                        android:indeterminate="false"
                        android:progress="50" />


                    <TextView
                        android:id="@+id/duration_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:maxLength="6"
                        android:paddingEnd="20dp"
                        android:paddingRight="20dp"
                        android:shadowColor="#000000"
                        android:textSize="12sp"
                        tools:text="asdasdasd"
                        android:paddingStart="5dp"
                        android:paddingLeft="5dp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical|center_horizontal"
                    android:orientation="horizontal"
                    android:padding="8dp">

                    <ImageButton
                        android:id="@+id/p_prev"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#00ffffff"
                        android:padding="10dp"
                        android:src="@drawable/ic_skip_previous_white_48dp" />

                    <ImageButton
                        android:id="@+id/pp_button"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:background="#00ffffff"
                        android:padding="15dp"
                        android:src="@drawable/ic_play_arrow_white_48dp" />

                    <ImageButton
                        android:id="@+id/p_next"
                        style="@style/Base.Widget.AppCompat.Button.Borderless"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="#00ffffff"
                        android:padding="10dp"
                        android:src="@drawable/ic_skip_next_white_48dp" />

                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:clickable="false">

            <me.arkadiy.geronplayer.views.SquareImageView
                android:id="@+id/hide_arrow"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:scaleType="center"
                android:src="@drawable/ic_expand_more_white_24dp"
                custom:direction="height"
                android:visibility="invisible" />

            <ImageButton
                android:id="@+id/queue_button"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_gravity="end"
                android:background="#00ffffff"
                android:src="@drawable/ic_queue_music_white_24dp" />
            <ImageButton
                android:id="@+id/equalizer_button"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:src="@drawable/ic_equalizer_white_24dp"
                android:background="#00ffffff" />

            <LinearLayout
                android:id="@+id/bottom_panel"
                android:layout_width="match_parent"
                android:layout_height="68dp"
                android:background="?attr/colorPrimary"
                android:orientation="horizontal"
                android:visibility="visible"
                android:clickable="false">

                <me.arkadiy.geronplayer.views.SquareImageView
                    android:id="@+id/sub_cover_art"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:clickable="true"
                    custom:direction="height" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <TextView
                        android:id="@+id/sub_song_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        android:shadowRadius="0.2"
                        tools:text="asdasdasd"
                        android:singleLine="true"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body2"
                        android:textSize="@dimen/main_text_size" />

                    <TextView
                        android:id="@+id/sub_artist_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:shadowColor="#000000"
                        android:shadowDx="1"
                        android:shadowDy="1"
                        tools:text="asdasdasd"
                        android:shadowRadius="0.2"
                        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                        android:singleLine="true"
                        android:textSize="@dimen/secondary_text_size" />
                </LinearLayout>

                <ImageButton
                    android:id="@+id/playback_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    android:background="#00ffffff"
                    android:src="@drawable/ic_play_arrow_white_24dp" />

            </LinearLayout>

        </FrameLayout>

    </FrameLayout>


</LinearLayout>