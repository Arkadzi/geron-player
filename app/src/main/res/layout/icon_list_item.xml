<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="@dimen/item_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:gravity="center_vertical"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:paddingEnd="@dimen/list_padding"
    android:paddingLeft="@dimen/list_padding"
    android:paddingRight="@dimen/list_padding"
    android:paddingStart="@dimen/list_padding">
    <!--android:background="?android:attr/selectableItemBackground"-->

        <!--<TextView-->
        <!--android:id="@+id/separator"-->
        <!--style="?android:listSeparatorTextViewStyle"-->
        <!--android:layout_width="fill_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="New Text"-->
        <!--android:textSize="14sp"-->
        <!--android:textStyle="bold" />-->

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal">


            <me.arkadiy.geronplayer.views.SquareImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginEnd="@dimen/list_padding"
                android:layout_marginRight="@dimen/list_padding"
                android:tint="?attr/colorControlNormal"
                android:scaleType="center"
                android:src="@drawable/ic_mic_white_36dp"
                custom:direction="height" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/list_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="artist"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/main_text_size" />

                <TextView
                    android:id="@+id/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/main"
                    android:layout_alignStart="@+id/main"
                    android:layout_below="@+id/main"
                    tools:text="0"
                    android:maxLines="1"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/secondary_text_size" />

            </RelativeLayout>

        </LinearLayout>

    </LinearLayout>
