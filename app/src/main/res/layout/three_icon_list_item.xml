<?xml version="1.0" encoding="utf-8"?>


<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/three_line_item_height"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?attr/selectableItemBackground"
    android:orientation="horizontal"
    android:padding="@dimen/list_padding">

            <me.arkadiy.geronplayer.views.SquareImageView
                android:id="@+id/icon"
                android:layout_width="@dimen/icon_size"
                android:layout_height="@dimen/icon_size"
                android:layout_marginEnd="@dimen/list_padding"
                android:layout_marginRight="@dimen/list_padding"
                android:scaleType="center"
                android:src="@drawable/ic_mic_white_36dp"
                android:tint="?attr/colorControlNormal"
                custom:direction="height" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/list_padding"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/main"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:singleLine="true"
                    tools:text="artist"
                    android:textColor="?android:attr/textColorPrimary"
                    android:textSize="@dimen/main_text_size" />

                <TextView
                    android:id="@+id/secondary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/main"
                    android:layout_alignStart="@+id/main"
                    android:layout_below="@+id/main"
                    tools:text="0"
                    android:maxLines="2"
                    android:textColor="?android:attr/textColorSecondary"
                    android:textSize="@dimen/secondary_text_size" />

            </RelativeLayout>

    </LinearLayout>
